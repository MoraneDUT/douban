.iconfont {
  font-family: "iconfont" !important;
  font-size: 16px;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.icon-sousuo:before {
  content: "\e8b9";
}

@import "./search.skeleton.wxss";

.search {
  background: #00adb5;
  padding: 20rpx 30rpx;
}

.search-content {
  display: flex;
  padding: 4rpx;
  border-radius: 20rpx;
  background: #fff;
}

.search-content .sousuo {
  line-height: 50rpx;
  padding-left: 10rpx;
}

.search-content .sousuo-text {
  height: 50rpx;
  padding-left: 20rpx;
}

.search-main {
  padding: 20rpx;
}

.main-item {
  display: flex;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #aaa;
  padding-bottom: 20rpx;
}

.main-item .item-pic image {
  width: 230rpx;
  height: 330rpx;
  border-radius: 15rpx;
}

.main-item .item-left {
  padding-left: 15rpx;
}

.main-item .left-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #111;
}

.main-item .left-rate {
  font-size: 24rpx;
  color: rgb(240, 191, 76);
  display: flex;
  justify-content: left;
  margin: 5rpx 0;
}

.main-item .left-comment {
  font-size: 28rpx;
  color: #333;
  text-align: justify;
}