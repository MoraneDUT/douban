.icon-sousuo:before {
  content: "\e8b9";
}
/* 搜索 */
.header-search {
  background-color: #00adb5;
  padding: 20rpx 30rpx;
}

.search-main {
  padding: 5rpx;
  border-radius: 20rpx;
  background: #fff;
  text-align: center;
  color: #c7c3c3;
}

/* 首页样式 */
@import "./index.skeleton.wxss";
.title-bar{
    margin: 15rpx 20rpx;
    display: flex;
    justify-content: space-between;
}
.title-bar .title-text{
    font-size: 18px;
}
.title-bar .more-btn{
    font-size: 12px;
    color: #42bd56;
}
/* 剧集列表区域 */
.section-content{
    display: flex;
    width: 1740rpx;
    margin-left: 20rpx;
}
.items-bar{
    width: 200rpx;
    text-align: center;
    margin-right: 15rpx;
}
.section-content .items-img image{
    width: 100%;
    height: 350rpx;
    border-radius: 10rpx;
}
.section-content .items-title{
    color: #111;
    font-size: 15px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow:ellipsis ;
}
.section-content .items-rate{
    color: #818181;
    font-size: 10px;
}
